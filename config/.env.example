# =============================================================================
# Excuse My French - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual API keys and credentials
# NEVER commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider (Choose ONE)
# -----------------------------------------------------------------------------
# OpenAI (for script generation)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# OR Anthropic Claude (alternative LLM provider)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# LLM Model Selection (optional, defaults shown)
LLM_MODEL=gpt-4  # or claude-3-5-sonnet-20241022
LLM_TEMPERATURE=0.8  # Higher = more creative (0.0 - 1.0)
LLM_MAX_TOKENS=1500  # Maximum tokens for script generation

# -----------------------------------------------------------------------------
# Voice Synthesis (REQUIRED)
# -----------------------------------------------------------------------------
# ElevenLabs API
# Get your key at: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# ElevenLabs Voice IDs
# Find voices at: https://elevenlabs.io/app/voice-library
# Click on a voice and copy its ID
ELEVENLABS_VOICE_BUTCHER=21m00Tcm4TlvDq8ikWAM  # Deep, sarcastic male voice (e.g., Adam)
ELEVENLABS_VOICE_NUTSY=pNInz6obpgDQGcFmaJgB    # Higher-pitched, energetic voice (e.g., Josh)

# ElevenLabs Settings
ELEVENLABS_MODEL=eleven_monolingual_v1  # or eleven_multilingual_v2
ELEVENLABS_STABILITY=0.5  # Voice stability (0.0 - 1.0)
ELEVENLABS_SIMILARITY_BOOST=0.75  # Voice clarity (0.0 - 1.0)

# -----------------------------------------------------------------------------
# AI Music Generation (Choose ONE or BOTH)
# -----------------------------------------------------------------------------
# Mubert
# Get your key at: https://mubert.com/render
MUBERT_API_KEY=your-mubert-api-key-here
MUBERT_LICENSE=your-mubert-license-key-here

# OR Soundverse
# Get your key at: https://soundverse.ai/
SOUNDVERSE_API_KEY=your-soundverse-api-key-here

# Music Settings
MUSIC_DURATION=60  # Default music duration in seconds
MUSIC_VOLUME=0.2  # Background music volume (0.0 - 1.0)

# -----------------------------------------------------------------------------
# Social Media Posting
# -----------------------------------------------------------------------------
# Meta/Instagram API
# Setup guide: https://developers.facebook.com/docs/instagram-api/getting-started
META_ACCESS_TOKEN=your-meta-access-token-here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id-here
INSTAGRAM_USER_ID=your-instagram-user-id-here

# TikTok API (Optional - requires approval)
# Setup guide: https://developers.tiktok.com/
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token-here
TIKTOK_CLIENT_KEY=your-tiktok-client-key-here
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret-here

# -----------------------------------------------------------------------------
# Model Hub & Downloads
# -----------------------------------------------------------------------------
# Hugging Face (for downloading Stable Diffusion and other models)
# Get your token at: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your-huggingface-token-here

# Model Paths (auto-populated, but you can override)
STABLE_DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5
DREAMBOOTH_MODEL_PATH=models/dreambooth_butcher
LORA_MODEL_PATH=models/lora
WAN_MODEL_PATH=models/wan2.2

# -----------------------------------------------------------------------------
# Video Generation Settings
# -----------------------------------------------------------------------------
# ComfyUI (local installation)
COMFYUI_PATH=/path/to/ComfyUI
COMFYUI_API_URL=http://127.0.0.1:8188

# Video Format
VIDEO_WIDTH=1080  # Instagram/TikTok vertical format
VIDEO_HEIGHT=1920
VIDEO_FPS=30
VIDEO_MAX_DURATION=60  # Maximum video length in seconds

# SadTalker / Wav2Lip Settings
SADTALKER_CHECKPOINT_PATH=models/sadtalker
LIPSYNC_MODEL=sadtalker  # or wav2lip

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
TRENDS_DB_PATH=data/trends.db
METRICS_DB_PATH=data/metrics.db
IMAGE_LIBRARY_DB_PATH=data/image_library.db

# -----------------------------------------------------------------------------
# Character Configuration
# -----------------------------------------------------------------------------
# Butcher personality traits (used in prompts)
BUTCHER_PERSONALITY=sarcastic, wise, French bulldog, deep voice, witty, observant

# Nutsy personality traits
NUTSY_PERSONALITY=hyperactive, energetic, squirrel, high-pitched voice, excitable, naive

# Content Settings
CONTENT_TONE=humorous, sarcastic, topical
CONTENT_LENGTH_MIN=8  # Minimum video length in seconds
CONTENT_LENGTH_MAX=60  # Maximum video length in seconds
SCRIPT_LINES_MIN=4  # Minimum dialogue lines
SCRIPT_LINES_MAX=12  # Maximum dialogue lines

# -----------------------------------------------------------------------------
# Advanced Settings
# -----------------------------------------------------------------------------
# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=data/logs/app.log

# Performance
BATCH_SIZE=1  # Number of images to generate at once
USE_GPU=true  # Use GPU acceleration when available
GPU_DEVICE=0  # GPU device ID (0 for primary GPU)

# Rate Limiting
ELEVENLABS_RATE_LIMIT=3  # Requests per second
OPENAI_RATE_LIMIT=5  # Requests per second

# Retry Settings
API_MAX_RETRIES=3
API_RETRY_DELAY=2  # Seconds between retries

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
DEBUG_MODE=false
DRY_RUN=false  # Preview actions without executing
SKIP_POSTING=false  # Generate videos but don't post to social media
SAVE_INTERMEDIATE_FILES=true  # Keep intermediate files for debugging
